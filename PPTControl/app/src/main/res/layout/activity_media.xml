<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/media_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_next"
        android:layout_alignTop="@+id/media_play"
        android:layout_toRightOf="@+id/media_play"
        android:layout_toEndOf="@+id/media_play"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:id="@+id/media_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:layout_alignTop="@+id/media_play"
        android:layout_toLeftOf="@+id/media_play"
        android:layout_toStartOf="@+id/media_play"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageButton
        android:id="@+id/media_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/media_next"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/media_rew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/media_previous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/volume_up"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/volume_up"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/media_ff"
        android:layout_alignEnd="@+id/media_ff"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="53dp" />

    <ImageButton
        android:id="@+id/volume_slience"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/volume_slience"
        android:layout_below="@+id/volume_up"
        android:layout_alignLeft="@+id/volume_up"
        android:layout_alignStart="@+id/volume_up"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/volume_down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
       android:background="@drawable/volume_down"
        android:layout_below="@+id/volume_slience"
        android:layout_alignLeft="@+id/volume_slience"
        android:layout_alignStart="@+id/volume_slience" />

    <ImageButton
        android:id="@+id/screen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/media_previous"
        android:layout_alignStart="@+id/media_previous"
        android:layout_below="@+id/volume_up"
        android:background="@drawable/full_screen" />
</RelativeLayout>
